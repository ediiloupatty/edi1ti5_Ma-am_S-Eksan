#include <iostream>

using namespace std;

int main(int argc, char** argv) {
	int daftarMinuman;
	cout<<"Nama  : Edi"<<endl;
	cout<<"Kelas : 1Ti5"<<endl;
	cout<<"NIM   : 22024169"<<endl;
	cout<<"___________________"<<endl;
	cout<<"Daftar Minuman"<<endl;
	cout<<"1. Teh"<<endl;
	cout<<"2. Kopi"<<endl;
	cout<<"3. Air Jeruk Nipis"<<endl;
	cout<<"4. Air Mineral"<<endl;
	cout<<"5. Lemon Tea"<<endl;
	
	cout<<"Silahkan Pilis Minuman : "<<endl;
	cin>>daftarMinuman;
	
	switch (daftarMinuman){
		case 1 :
			cout<<"Anda Memilih Minumann Teh"<<endl;
			break;
		case 2 :
			cout<<"Anda Memilih Minuman Kopi"<<endl;
			break;
		case 3 :
			cout<<"Anda Memilih Minuman Air Jeruk Nipis"<<endl;
			break;
		case 4 :
			cout<<"Anda Memilih Minuman Air Mineral"<<endl;
			break;
		case 5 :
			cout<<"Anda Memilih Minuman Lemon Tea"<<endl;
			break;
		default :
			cout<<"Maaf Pilihan Anda Tidak Sesuai Terimakasih"<<endl;
	}
}
